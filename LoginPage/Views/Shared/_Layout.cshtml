<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LoginPage</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/LoginPage.styles.css" asp-append-version="true" />
   @* <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous"/>
     <link rel="stylesheet"
          href="https://fonts.googleapis.com/css?family=Mea+Culpa">*@

    <style>
    
        .navbar{
            transition-duration: 0.5s;
            background: rgba(255, 255, 255, 0.1);
        }
        .navbar.active {
            background: #fff;
            box-shadow: 1px 2px 10px rgba(0, 0, 0, 0.1);
        }

        .nav-item a{
            font-weight: bold;
        }

        .cover {
            overflow: hidden;
            position: relative;
            height: 100vh;
        }

        .cover-overlay {
            position: absolute;
            top: 0;
            height:100vh;
            width: 100vw;
            left: 0;
            background-color: rgba(255, 255, 255, 0.10);
            z-index: 9;
        }



        .cover img {
            width: 100% !important;
            position: absolute;
            top: 0;
            transition: all 0.4s;
            height: 100vh;

        }

        .cover-content {
            position: absolute;
            bottom: 60%;
            left: 10%;
            z-index: 99;
            font-family: Mea Culpa;
        }

        .heading1{
            font-size: 88px;
            color:royalblue;
        }

        .heading1 span{
            color:aliceblue;
        }


    </style>

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm transparent fixed-top">
            <div class="container-fluid">
                <a class="navbar-brand font-weight-bold" asp-area="" asp-controller="Home" asp-action="Index">Hotel</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-end">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>


                            <li class="nav-item">
                                <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Login">Login</a>
                            </li>
                        
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Register">Create Account</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Logout">LogOut</a>
                            </li>
                        
                            <li class="nav-item">
                                <a class="nav-link text-light" href="Home/DisplayOrders?id=@ViewData["uid"]" >Orders</a>
                            </li>

                    </ul>
                </div>
            </div>
        </nav>
    </header>

    @if(@ViewData["ToLoadCover"]==null)
    {
        
    }
    <div class="cover">
        <img src="https://mir-s3-cdn-cf.behance.net/project_modules/max_1200/51db9b91560979.5e34ace4791ef.jpg" alt="">
        <div class="cover-overlay"></div>
        <div class="cover-content">
            <h3 class="heading1">
                <span> @ViewData["Greeting1"] </span> @ViewData["Greeting2"] 
                
            </h3>

        </div>
    </div>


    <div class="">
        @*
             //class used pb-3
        *@
        <main role="main" class="bg-light">
            @RenderBody()
        </main>
    </div>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
   
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>

<script>

    $(function () {
    $(window).on('scroll', function () {
        if ( $(window).scrollTop() > 10 ) {
            $('.navbar').addClass('active');
            $('.navbar').removeClass('transparent');

            $('.nav-link').removeClass('text-white');
            $('.nav-link').addClass('text-dark');
        } else {
            $('.navbar').removeClass('active');
            $('.navbar').addClass('transparent');

            $('.nav-link').removeClass('text-dark');
            $('.nav-link').addClass('text-light');
        }
    });
});

</script>    

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
