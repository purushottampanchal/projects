@{
}

@model User

<div style="
    width:100vw; 
    height:100vh;">

    <h2 class="display-5 text-center">Log into your Account</h2> 

    @if (ViewData != null )
    {

        <p class="text-danger pl-5 text-center mt-4">@ViewData["Message"];
             </p>
    }
    
    <div class="w-25 align-self-center m-5">

        <form method="post" asp-action="Login">    
            <div class="mb-5 row">

                <label asp-for="Name" class="form-label center">
                </label>
                <input type="text" asp-for="Name" placeholder="User Name" class="form-control center" />
                <span asp-validation-for="Name" class="text-danger mb-3"></span>

                <label asp-for="Password" class="form-label center">
                </label>
                <input type="password" asp-for="Password" placeholder="Password" class="form-control center" />
                <span asp-validation-for="Password" class="text-danger"></span>

            </div>
    
        <input type="submit" class="btn btn-outline-primary w-100" value="Log In" />

    </form>

    </div>

 </div>
